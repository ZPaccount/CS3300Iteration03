<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th class="fs-3">Title</th>
      <th class="fs-3">Description</th>
      <th class="fs-3">Rating</th>
      <th class="fs-3">Playtime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td class="fs-2"><%= game.title %></td>
        <td class="fs-2"><%= game.description %></td>
        <td class="fs-2"><%= game.rating %></td>
        <td class="fs-2"><%= game.playTime %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', game, class:"text-light btn btn-lg btn-success" %></td>
          <td><%= link_to 'Edit', edit_game_path(game), class:"text-light btn btn-lg btn-success" %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-light btn btn-lg btn-success" %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<td><%= link_to 'New Game', new_game_path, class:"text-light btn btn-lg btn-success" %></td>
